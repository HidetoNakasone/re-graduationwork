  <% else %>
  <div id = "my_icon" class = "animated fadeIn">
  <% end %>
    <% if @is_same %>
      <form action="/edit_img_icon" enctype="multipart/form-data" method="post">
        <input type="hidden" name="from_url" value="<%= request.path %>">
        <label><input type="file" onchange="this.form.submit()" accept="image/*" name="go_img_icon" style="display: none;"><div><img src="/user_icon/<%= @target_user_id %>_icon.jpg?hoge=<%= Time.now() %>" style="cursor: pointer;"></div></label>
