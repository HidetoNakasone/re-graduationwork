  <div id="my_info">
  <% else %>
  <div id="my_info" class = "animated fadeInUp">
  <% end %>
    <div class="waku">
      <h1><%= @target_user_name %></h1>
      <p>User番号：&nbsp;<%= @target_user_id %></p>

      <p id = 'account_comment'><%= @target_user_profile %></p>

      <% if @is_same %>
